{% extends 'base.html.twig' %}

{% block title %}{{ 'layout.login'|trans({}, 'FOSUserBundle') }}{% endblock %}

{% block content %}

    <h1 class="modal-title" id="loginModalLabel">{{ 'layout.login'|trans({}, 'FOSUserBundle')|upper }}</h1>
    <hr />

    <form action="{{ path("fos_user_security_check") }}" method="post" role="form" data-async>
        <p class="error"></p>
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <input type="hidden" name="_csrf_token" value="{{ fos_csrf_provider.getToken('authenticate') }}" />
        <div class="form-group">
            <label for="email">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
            <input type="text" class="form-control" id="username" name="_username" required="required">
        </div>
        <div class="form-group">
            <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label><br />
            <input type="password" class="form-control" id="password" name="_password" required="required">
        </div>
        <div class="form-group">
            <label for="remember_me">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
            </label>
        </div>
        <div class="modal-footer">
            <a href="{{ path("fos_user_registration_register") }}" class="btn btn-danger" >{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</a>
            <input type="submit" id="_login_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-primary" />
        </div>
        <div class="modal-footer">
            {% include 'blocks/social_login_buttons.html.twig' %}
        </div>
    </form>
{% endblock %}