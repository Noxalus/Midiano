<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form action="{{ path("fos_user_security_check") }}" method="post" role="form" data-async>
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="loginModalLabel">{{ 'layout.login'|trans({}, 'FOSUserBundle')|upper }}</h4>
                </div>
                <div class="modal-body">
                    <p class="error"></p>
                    <input type="hidden" name="_csrf_token" value="{{ fos_csrf_provider.getToken('authenticate') }}" />
                    <div class="form-group">
                        <label for="email">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
                        <input type="text" class="form-control" id="username" name="_username" required="required">
                    </div>
                    <div class="form-group">
                        <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label><br />
                        <input type="password" id="password" name="_password" required="required" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="remember_me">
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                            {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
                        </label>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal" data-toggle="modal" data-target="#registerModal">{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</button>
                        <input type="submit" id="_login_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-primary">
                    </div>
                    <div class="modal-footer">
                        {% include 'blocks/social_login_buttons.html.twig' %}
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>